{
  "name": "array-divider",
  "version": "3.0.0",
  "main": "index.js",
  "description": "Create array chunks, giving the length that each chunk will have",
  "repository": "git@github.com:TheEnmanuel23/array-divider.git",
  "author": {
    "name": "Enmanuel Jarquin",
    "email": "info@enmisac.com",
    "url": "http://enmisac.com"
  },
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel build:*",
    "build:main": "babel --copy-files --out-dir dist --ignore *.text index.js",
    "build:umd": "webpack --output-filename index.umd.js",
    "build:umd.min": "webpack --output-filename index.umd.min.js -p",
    "lint": "eslint index.js",
    "test": "NODE_ENV=test nyc mocha test/**.test.js",
    "watch:test": "mocha --watch",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "validate": "npm-run-all --parallel lint test build",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/npm": "^5.1.9",
    "@semantic-release/release-notes-generator": "^7.1.7",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint-config-kentcdodds": "^13.0.1",
    "mocha": "^5.0.0",
    "semantic-release": "^17.2.3"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "parts",
    "split",
    "sub arrays",
    "array",
    "chunks",
    "partials",
    "fragments",
    "divider",
    "partition"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.3",
    "babel-preset-es2015": "^6.24.1",
    "codecov": "^3.0.0",
    "eslint": "^4.18.0",
    "eslint-plugin-mocha": "^4.11.0",
    "ghooks": "^2.0.2",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.4.1",
    "semantic-release": "^17.2.3",
    "webpack": "^4.0.1",
    "webpack-cli": "^2.0.10"
  },
  "nyc": {
    "check-coverage": true,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100,
    "reporter": [
      "text",
      "lcov"
    ],
    "instrument": false,
    "sourceMap": false,
    "require": [
      "babel-register"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "yarn validate"
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  }
}
